<Window x:Class="MyPacMan.Views.PluginPresenter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPacMan.Views"
        mc:Ignorable="d"
        Title="PluginPresenter" Height="300" Width="300">
    
        <ListView 
            Grid.Column="0"
            Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn  DisplayMemberBinding="{Binding Path=FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">Name</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    
</Window>
